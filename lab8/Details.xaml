<Window x:Class="lab8.Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab8"
        mc:Ignorable="d"
        Title="Details" Height="450" Width="800">
    <Grid>
        <Button x:Name="btn_zamknij"
                Click="btn_zamknij_Click"
                Content="Zamknij" HorizontalAlignment="Center" Margin="0,351,0,0" VerticalAlignment="Top" Height="50" Width="84"/>
        <TextBox x:Name="detailsTextBox"
                 IsReadOnly="True"
                 HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"
                 HorizontalAlignment="Center" Margin="0,135,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="Auto" Height="Auto"/>
        <TextBlock x:Name="nazwa_lotniskaTextBlock"
                   TextAlignment="Center"                   
                   HorizontalAlignment="Center" Margin="0,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="Auto" Height="Auto" FontSize="14"/>
    </Grid>
</Window>
