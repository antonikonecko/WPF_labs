<Window x:Class="lab6.WindowAddItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab6"
        mc:Ignorable="d"
        Title="WindowAddItem" Height="300" Width="450">

    <Grid>
        <TextBox x:Name = "TextBoxName" HorizontalAlignment="Left" Margin="170,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MinWidth="50" MaxWidth="100" MaxHeight="20" TextChanged="TextBoxName_TextChanged" />
        <TextBlock HorizontalAlignment="Left" Margin="100,107,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"/>
        <Button x:Name="AddBtn" Content="Add" HorizontalAlignment="Left" Margin="242,107,0,0" VerticalAlignment="Top" Click="Add_Btn_Click"/>
    </Grid>
</Window>
