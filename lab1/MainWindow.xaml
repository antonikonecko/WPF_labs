<Window  x:Class="lab1.Timer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Timer" Height="300" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <Label Name="lblTime" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Margin="0,0,0,0" Opacity="0.6" />
        <Button Name="bstoper" Content="STOPER" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Center" Click="bstoper_Click_1" Grid.Column="1"/>

    </Grid>
</Window>
