<Window x:Class="lab7.OddajWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab7"
        mc:Ignorable="d"
        Title="OddajWindow" Background ="Gray" Height="301" Width="509">
    <Grid>
        <ComboBox x:Name="cbox_wypozyczone"
                  SelectionChanged="cbox_wypozyczone_SelectionChanged"
            HorizontalAlignment="Left" Margin="96,164,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock TextAlignment="Center"
            HorizontalAlignment="Left" Margin="96,138,0,0" TextWrapping="Wrap"
                   VerticalAlignment="Top" Width="120" FontWeight="Bold" FontSize="16"><Run Language="pl-pl" Text="ID ksiazki"/></TextBlock>
        <Button x:Name="OddajBtn"
                Click="OddajBtn_Click"
                Content="Oddaj ksiązkę" 
                HorizontalAlignment="Left" 
                Margin="288,115,0,0" 
                VerticalAlignment="Top" 
                Height="80" Width="134"  />
    </Grid>
</Window>
